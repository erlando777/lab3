@model WebApplication7.Models.GradeTitle

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center py-2">Vertinimo kriterijaus pridėjimas</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container w-50 justify-content-center mr-auto">
        <div class="container col-6">
            <h4 class="text-center">Kriterijus</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="padding-left:40px">
                @Html.LabelFor(model => model.ModuleID, "Modulis", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ModuleID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ModuleID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding-left:40px">
                @Html.LabelFor(model => model.GradeTitle1, "Vertinimo kriterijus", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GradeTitle1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GradeTitle1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group py-2" style="padding-left:40px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pridėti" class="btn btn-info" />
                </div>
            </div>
        </div>
        </div>
        <hr />
        }
