@model WebApplication7.Models.Module

@{
    ViewBag.Title = "DeleteModule";
}

<h2 class="text-center">Modulio ištrinimas</h2>
<hr />
<h3 class="text-center">Patvirtinimas</h3>
<div class="container w-50 justify-content-center mr-auto">
    <div class="container col-6" >
        <div>
            <h4 class="text-center">Modulis</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Modulio kodas
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModuleCode)
                </dd>

                <dt>
                    Modulis
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModuleTitle)
                </dd>

                <dt>
                    Dėstytojas
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.Surname)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center" >
                    <input type="submit" value="Ištrinti" class="btn btn-danger" />

                </div>
            }
        </div>
        </div>
    </div>
