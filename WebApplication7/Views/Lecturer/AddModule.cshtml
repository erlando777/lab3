@model WebApplication7.Models.Module

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center py-2">Modulio sukūrimas</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container w-50 justify-content-center mr-auto">
        <div class="container col-6">
            <h4 class="text-center">Modulis</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="padding-left:40px">
                @Html.LabelFor(model => model.ModuleCode, "Modulio kodas", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ModuleCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ModuleCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding-left:40px">
                @Html.LabelFor(model => model.ModuleTitle, "Modulio pavadinimas", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ModuleTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ModuleTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group py-2" style="padding-left:40px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sukurti" class="btn btn-info" />
                </div>
            </div>
        </div>
        </div>
        @ViewBag.Error
        <hr />
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
