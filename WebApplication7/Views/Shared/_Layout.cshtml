                    <li class="px-2">
                        @Html.ActionLink("Pradžia", "Index", "Home", null, new { Style = "color:#40a697;" })
                    </li>
                    @if (Session["Role"] != null)
                    {
                        if (Session["Role"].ToString() == "1")
                        {
                            <li class="px-2">
                                @Html.ActionLink("Prideti role", "AddRole", "Admin", null, new { Style = "color:#40a697;" })
                            </li>
                            <li class="px-2">
                                @Html.ActionLink("Naudotojai", "Users", "Admin", null, new { Style = "color:#40a697;" })
                            </li>
                        }
                    }
                    @if (Session["Role"] != null)
                    {
                        if (Session["Role"].ToString() == "2")
                        {
                            <li class="px-2">
                                @Html.ActionLink("Pridėti modulį", "AddModule", "Lecturer", null, new { Style = "color:#40a697;" })
                            </li>
                            <li class="px-2">
                                @Html.ActionLink("Pridėti paskaitą", "AddLecture", "Lecturer", null, new { Style = "color:#40a697;" })
                            </li>
                            <li class="px-2">
                                @Html.ActionLink("Pridėti studentą", "AddStudent", "Lecturer", null, new { Style = "color:#40a697;" })
                            </li>
                            <li class="px-2">
                                @Html.ActionLink("Moduliai", "Modules", "Lecturer", null, new { Style = "color:#40a697;" })
                            </li>
                        }
                    }
                    @if (Session["Role"] != null)
                    {
                        if (Session["Role"].ToString() == "3")
                        {
                            <li class="px-2">
                                @Html.ActionLink("Perziureti modulius", "Modules", "Student", null, new { Style = "color:#40a697;" })
                            </li>
                        }
                    }
                </ul>
