                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav ml-auto">
                        @if (Session["Username"] != null)
                        {
                            <li class="nav-item px-3 text-white">@Session["Username"]</li>
                            <li class="nav-item px-2">@Html.ActionLink("Atsijungti", "Logout", "Home", null, new { Style = "color:#40a697;" })</li>
                        }
                        else
                        {
                            <li class="nav-item px-2">@Html.ActionLink("Registruotis", "Register", "Home", null, new { Style = "color:#40a697;" })</li>
                            <li class="nav-item px-2">@Html.ActionLink("Prisijungti", "Login", "Home", null, new { Style = "color:#40a697;" })</li>
                        }
                    </ul>
                </div>
            </nav>
        </div>

        <div class="container-fluid body-content bg-white" style="min-height:520px; max-height:1500px">
            @RenderBody()
            <footer class="container-fluid fixed-bottom text-center bg-dark" style="width:88%; border-top: 4px solid #40a697;">
                <p class="text-white">&copy; @DateTime.Now.Year - Justas</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
  
    @RenderSection("scripts", required: false)
</body>
</html>