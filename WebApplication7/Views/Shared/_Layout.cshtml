<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moodle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#E6E6E6">
    <div class="container" style="width:90%; max-width:1600px">
        <div class="bg-white" style="border-top: 4px solid #40a697;">
            <img src="~/Content/icon.jpg" width="200px" height="100px" class="px-3 py-2" />
            <nav class="navbar navbar-expand-xl navbar-light" style="background-color:#575151">
