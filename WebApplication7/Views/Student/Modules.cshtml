
@model IEnumerable<WebApplication7.Models.StudentModule>
@{
    ViewBag.Title = "Modules";
}

<h2 class="pt-2">Studento dalykai</h2>
<hr />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4 py-2">
                <div class="card" style="width:270px;height:150px">
                    <div class="card-body">
                        <div class="card-title text-center">
                            <p>@Html.DisplayFor(modelItem => item.Module.ModuleTitle)</p>
                        </div>

                    </div>
                    <div class="container justify-content-center py-2">
                        <div class="container text-center rounded" style="width:230px;background-color:#40a697">
                            @Html.ActionLink("Pazymiai", "StudentGrades", new { id = item.ModuleID }, new { Style = "color:white" }) | 
                            <a href="" class="text-white"> @Html.ActionLink("Peržiūrėti", "ModuleLectures", new { id = item.ModuleID }, new { Style = "color:white" })</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />
<div>
    <p> @Html.ActionLink("Grįžti atgal", "Index", "Home")</p>
</div>