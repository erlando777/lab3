            <div class="form-group py-2" style="padding-left:40px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registruotis" class="btn btn-info" />
                </div>
            </div>
        </div>
        </div>
    <p class="text-center">@ViewBag.Error</p>
        
        <hr />
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
